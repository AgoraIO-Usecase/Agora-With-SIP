<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".CallSipActivity">

    <TextView
        style="@style/MyTitleStyle"
        android:text="Room ID" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_room_id"
            style="@style/MyExitTextStyle"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_random" />

    </LinearLayout>

    <TextView
        style="@style/MyTitleStyle"
        android:text="Caller" />

    <EditText
        android:id="@+id/et_caller"
        style="@style/MyExitTextStyle"
        android:inputType="phone" />

    <TextView
        style="@style/MyTitleStyle"
        android:text="Phone" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/MyExitTextStyle"
        android:inputType="phone" />

    <TextView
        style="@style/MyTitleStyle"
        android:text="Gw" />

    <EditText
        android:id="@+id/et_gw"
        style="@style/MyExitTextStyle" />

    <TextView
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="24dp"
        android:text="If you need a test account, please contact us."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_call_out"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_btn"
        android:text="Audio call"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>